<% layout('layouts/boilerplate')%>
    <h1>All Products!</h1>
    <div>
        <a href="/products/new">Add a product!</a>
    </div>
    <%for(let i of prod){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img alt="" class="img-fluid" src="<%=i.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=i.title%>
                        </h4>
                        </h5>
                        <p class="card-text">
                            <%=i.seller_name%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=i.description%>
                            </small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=i.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/products/<%=i._id%>">View Product</a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>